            "get": {
                "security": [{"APIKeyAuth": []}],
                "description": "Redirects to enrichments endpoint with snippet filters",
                "tags": ["repositories"],
                "summary": "List commit snippets",
                "parameters": [
                    {"type": "integer", "description": "Repository ID", "name": "id", "in": "path", "required": true},
                    {"type": "string", "description": "Commit SHA", "name": "commit_sha", "in": "path", "required": true}
                ],
                "responses": {
                    "308": {"description": "Permanent Redirect"}
                }
            }
        },
        "/repositories/{id}/commits/{commit_sha}/embeddings": {
            "get": {
                "security": [{"APIKeyAuth": []}],
                "description": "List embeddings for snippets in a commit",
                "produces": ["application/json"],
                "tags": ["repositories"],
                "summary": "List commit embeddings",
                "parameters": [
                    {"type": "integer", "description": "Repository ID", "name": "id", "in": "path", "required": true},
                    {"type": "string", "description": "Commit SHA", "name": "commit_sha", "in": "path", "required": true},
                    {"type": "boolean", "description": "Return full embedding vectors", "name": "full", "in": "query"}
