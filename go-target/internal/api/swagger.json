            "get": {
                "security": [{"APIKeyAuth": []}],
                "description": "Get a tag by ID",
                "produces": ["application/json"],
                "tags": ["repositories"],
                "summary": "Get tag",
                "parameters": [
                    {"type": "integer", "description": "Repository ID", "name": "id", "in": "path", "required": true},
